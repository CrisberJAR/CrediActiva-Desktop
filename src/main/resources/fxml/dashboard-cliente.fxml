<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.crediactiva.controller.DashboardController">
   <top>
      <!-- Barra superior -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #17a2b8; -fx-padding: 10;">
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="CrediActiva - Panel de Cliente" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userLabel" style="-fx-text-fill: white; -fx-font-size: 12px;" text="Cliente: " />
            <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #138496; -fx-text-fill: white;" text="Cerrar Sesión" />
         </children>
      </HBox>
   </top>
   <left>
      <!-- Menu lateral -->
      <VBox prefWidth="200.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 0 1 0 0;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-padding: 15 10 10 10;" text="MENÚ CLIENTE" />
            
            <!-- Mis Préstamos -->
            <Button fx:id="prestamosButton" maxWidth="1.7976931348623157E308" onAction="#handlePrestamos" style="-fx-background-color: transparent; -fx-alignment: center-left; -fx-padding: 12 15;" text="💰 Mis Préstamos" />
            
            <!-- Cronogramas -->
            <Button fx:id="cronogramasButton" maxWidth="1.7976931348623157E308" onAction="#handleCronogramas" style="-fx-background-color: transparent; -fx-alignment: center-left; -fx-padding: 12 15;" text="📅 Cronogramas de Pago" />
            
            <!-- Historial de Pagos -->
            <Button fx:id="historialButton" maxWidth="1.7976931348623157E308" onAction="#handleHistorial" style="-fx-background-color: transparent; -fx-alignment: center-left; -fx-padding: 12 15;" text="📋 Historial de Pagos" />
            
            <!-- Solicitar Préstamo -->
            <Button fx:id="solicitarButton" maxWidth="1.7976931348623157E308" onAction="#handleSolicitar" style="-fx-background-color: transparent; -fx-alignment: center-left; -fx-padding: 12 15;" text="➕ Solicitar Préstamo" />
            
            <Separator />
            
            <!-- Mi Perfil -->
            <Button fx:id="perfilButton" maxWidth="1.7976931348623157E308" onAction="#handlePerfil" style="-fx-background-color: transparent; -fx-alignment: center-left; -fx-padding: 12 15;" text="👤 Mi Perfil" />
            
            <!-- Contacto -->
            <Button fx:id="contactoButton" maxWidth="1.7976931348623157E308" onAction="#handleContacto" style="-fx-background-color: transparent; -fx-alignment: center-left; -fx-padding: 12 15;" text="📞 Contacto" />
         </children>
      </VBox>
   </left>
   <center>
      <!-- Contenido principal -->
      <ScrollPane fitToHeight="true" fitToWidth="true">
         <content>
            <VBox spacing="20.0" style="-fx-padding: 20;">
               <children>
                  <!-- Título de bienvenida -->
                  <VBox spacing="10.0">
                     <children>
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Bienvenido a CrediActiva" />
                        <Label fx:id="welcomeLabel" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Panel de Cliente" />
                     </children>
                  </VBox>
                  
                  <!-- Resumen financiero -->
                  <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-padding: 20;">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Resumen Financiero" />
                        <GridPane hgap="20.0" vgap="15.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <!-- Total Prestado -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="Total Prestado" />
                                    <Label fx:id="totalPrestadoLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #17a2b8;" text="S/ 0.00" />
                                 </children>
                              </VBox>
                              
                              <!-- Deuda Actual -->
                              <VBox spacing="5.0" GridPane.columnIndex="1">
                                 <children>
                                    <Label style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="Deuda Actual" />
                                    <Label fx:id="deudaActualLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #dc3545;" text="S/ 0.00" />
                                 </children>
                              </VBox>
                              
                              <!-- Próximo Pago -->
                              <VBox spacing="5.0" GridPane.columnIndex="2">
                                 <children>
                                    <Label style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="Próximo Pago" />
                                    <Label fx:id="proximoPagoLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffc107;" text="S/ 0.00" />
                                 </children>
                              </VBox>
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
                  
                  <!-- Acciones rápidas -->
                  <VBox spacing="15.0">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Acciones Rápidas" />
                        <HBox spacing="15.0">
                           <children>
                              <Button onAction="#handleVerPrestamos" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-padding: 10 20;" text="💰 Ver Préstamos" />
                              <Button onAction="#handleVerCronogramas" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 10 20;" text="📅 Cronogramas" />
                              <Button onAction="#handleSolicitarPrestamo" style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-padding: 10 20;" text="➕ Solicitar Préstamo" />
                              <Button onAction="#handleContactarAsesor" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 10 20;" text="📞 Contactar Asesor" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Estado de préstamos -->
                  <VBox spacing="15.0">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Estado de mis Préstamos" />
                        <TableView fx:id="prestamosTable" prefHeight="200.0">
                           <columns>
                              <TableColumn prefWidth="120.0" text="Número" />
                              <TableColumn prefWidth="100.0" text="Monto" />
                              <TableColumn prefWidth="80.0" text="Estado" />
                              <TableColumn prefWidth="100.0" text="Deuda Actual" />
                              <TableColumn prefWidth="100.0" text="Próx. Cuota" />
                              <TableColumn prefWidth="100.0" text="Fecha Venc." />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
                  
                  <!-- Información importante -->
                  <VBox spacing="10.0" style="-fx-background-color: #e7f3ff; -fx-background-radius: 8; -fx-padding: 15;">
                     <children>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #0066cc;" text="ℹ️ Información Importante" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #333333;" text="• Recuerde realizar sus pagos puntualmente para mantener un buen historial crediticio." />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #333333;" text="• Puede contactar a su asesor para cualquier consulta sobre sus préstamos." />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #333333;" text="• Los pagos se pueden realizar en efectivo, transferencia bancaria o depósito." />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <!-- Barra inferior -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0; -fx-padding: 5 10;">
         <children>
            <Label fx:id="statusLabel" style="-fx-font-size: 11px; -fx-text-fill: #666666;" text="Estado: Conectado" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="timeLabel" style="-fx-font-size: 11px; -fx-text-fill: #666666;" text="Fecha/Hora" />
         </children>
      </HBox>
   </bottom>
</BorderPane>


